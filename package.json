{
  "name": "whatsappai",
  "version": "1.0.0",
  "description": "Prototype WhatsApp banking webhook + orchestrator (mocked connectors)",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node ./tests/smoke.js || true",
    "test:ai": "node ./tests/test-ai.js",
    "test:mongodb": "node ./tests/mongodb-test.js",
    "test:all": "npm run test:mongodb && npm run test:ai && npm test",
    "mongodb:start": "docker-compose up -d mongodb",
    "mongodb:stop": "docker-compose down",
    "mongodb:logs": "docker-compose logs -f mongodb",
    "ngrok:authtoken": "npx ngrok authtoken",
    "ngrok": "npx ngrok http 3000",
    "tunnel": "npx localtunnel --port 3000"
  },
